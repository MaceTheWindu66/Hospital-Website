// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  output     = "../.prisma/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

// example table used in the express router example
model HighScore {
  id    Int      @id @default(autoincrement())
  time  DateTime
  score Int
}

model Nodes {
  nodeID     String  @id
  xcoord     Int
  ycoord     Int
  floor      String
  building   String
  nodeType   String
  longName   String
  shortName  String
  endNodes   Edges[] @relation("end")
  startNodes Edges[] @relation("start")
}

model Edges {
  edgeID      Int    @id @default(autoincrement())
  startNodeID String
  endNodeID   String
  end         Nodes  @relation("end", fields: [endNodeID], references: [nodeID])
  start       Nodes  @relation("start", fields: [startNodeID], references: [nodeID])
}

model Form {
  formID       Int    @id @default(autoincrement())
  receiverName String
  message      String
  senderName   String
  flowerType   String
  roomNumber   Int
}
